{
  "name": "@macalinao/style-guide",
  "description": "Monorepo containing ESLint and TypeScript configurations.",
  "private": true,
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "lint": "biome check && turbo run lint",
    "lint:fix": "biome check --write --unsafe && turbo run lint -- --fix",
    "format": "biome format --write",
    "format:check": "biome check --write",
    "ci:version": "changeset version",
    "ci:publish": "for dir in packages/*; do (cd \"$dir\" && bun publish); done && changeset tag",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Ian Macalinao <me@ianm.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@changesets/cli": "^2.29.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.1",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22",
    "bun": ">=1.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": [
      "biome check --write --no-errors-on-unmatched",
      "eslint --fix --cache"
    ],
    "*.{md,yml,yaml}": "prettier --write",
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  },
  "packageManager": "bun@1.2.16"
}
